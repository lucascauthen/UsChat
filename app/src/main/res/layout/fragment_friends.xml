<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lucascauthen.uschat.presentation.view.fragments.old.FriendsFragment"
    android:background="@color/text_color_light">

    <RelativeLayout
        android:id="@+id/menuBar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="@color/accent_dark">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/friend_search_button"
            android:layout_gravity="center|right"
            android:src="@drawable/ic_action_search"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:background="@null"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_edit_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/friend_search_button"
            android:layout_marginRight="16dp"
            android:enabled="false"
            android:hint="@string/people_search_hint"
            android:textColorHint="@color/text_color_light"
            android:maxLines="1"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friends_list_title"
            android:id="@+id/friends_list_title_text_view"
            android:layout_below="@+id/search_edit_text"
            android:layout_toRightOf="@+id/search_edit_text"
            android:layout_toEndOf="@+id/search_edit_text"
            android:layout_alignParentEnd="false"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="25dp"
            android:textColor="@color/text_color_light"/>
    </RelativeLayout>
    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshFriendsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/friend_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
