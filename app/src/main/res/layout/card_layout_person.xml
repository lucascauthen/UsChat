<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:gravity="center_vertical|center_horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/person_cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/RecyclerView.Tile">

        <RelativeLayout
            android:id="@+id/person_card_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/person_card_state_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <com.lucascauthen.uschat.presentation.view.components.AutoResizeTextView
                android:id="@+id/person_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/person_card_state_image"
                android:layout_toRightOf="@+id/person_card_state_image"
                android:layout_toLeftOf="@+id/action_parent_container"/>
            <FrameLayout
                android:id="@+id/action_parent_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/person_card_action_container">
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/person_card_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal|center_vertical"/>
            </FrameLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>